#!/bin/bash

source $(dirname $0)/lib/prompt.sh

prompt "Hostname" "$HOSTNAME" "NAME"

docker run \
  -d \
  --cap-add SYS_PTRACE \
  -v /proc:/host/proc:ro \
  -v /sys:/host/sys:ro \
  -v /var/run/docker.sock:/var/run/docker.sock \
  -e VIRTUAL_HOST=netdata.* \
  --hostname $NAME \
  --name netdata \
  titpetric/netdata
